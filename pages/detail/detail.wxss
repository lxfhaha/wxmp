/* pages/detail/detail.wxss */
.slide-image{
  width: 100%;
  height: 100%;
}
.info-item {
  width: 100%;
  padding: 10px 0;
  text-align: center;
}
.name {
  font-size: 18px;
  color: #3a3a3a;
  margin-bottom: 5px;
}
.desc {
  font-size: 14px;
  color: #878787;
  margin-bottom: 5px;
}
.small {
  font-size: 14px;
}
.big {
  font-size: 55rpx;
}
.colorful {
  color: #ff8000;
}
.line {
  text-decoration: blue line-through;
  color: #878787;
  margin-left: 5px;
}
.footer {
  position: fixed;
  bottom: 0;
  height: 45px;
  width: 100%;
  line-height: 45px;
}
.cart-btn {
  background: #65a032;
  border-radius: 50%;
  position: absolute;
  left: 5px;
  bottom: 5px;
}
.cart-btn,.cart-btn image {
  width: 50px;
  height: 50px;
}
.add-cart {
  float: right;
  width: 180px;
  height: 100%;
  background: #ff8000;
  color: #fff;
  font-size: 18px;
  line-height: 45px;
  text-align: center;
}