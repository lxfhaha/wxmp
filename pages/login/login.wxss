/* pages/login/login.wxss */
.login-content {
  height: 600px;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  background: url("https://wap.fruitday.com/content/images/me/login-bg.png") no-repeat 100% 100%;
}
.login-content .login-form {
  width: 80%;
  height: 200px;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}
.login-form .username,.login-form .pwd {
  display: flex;
  align-items: center;
  width: 100%;
  height: 35px;
  border-bottom: 1px solid #dedede;
  margin: 10px auto;
}
.login-form .username input,.login-form .pwd input {
  font-size: 16px;
  padding: 15px;
}
.login-form .username image {
  width: 22px;
  height: 22px;
}
.login-form .pwd image {
  width
  : 22px;
  height: 22px;
}
.login-form .login-btn {
  width: 100%;
  margin-top: 50px;
}
.login-btn button {
  width: 100%;
  height: 40px;
  background-color: rgb(68, 155, 255);
  color: #fff;
}